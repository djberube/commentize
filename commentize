#!/bin/bash

MIN_WIDTH=8
cc='#'
width=80
fill=' '

usage() {
    echo "usage: commentize -c [comment character] -w [width, greater than $MIN_WIDTH] -f [fill character] -s [string to commentize]"
}

while getopts :c:w:s:f: FLAG; do
    case $FLAG in
        c)
            cc=$OPTARG
            ;;
        w)
            width=$OPTARG
            if [ $width -le $MIN_WIDTH ]; then
                usage
                exit 1
            fi
            ;;
        s)
            str=$OPTARG
            ;;
        f)
            fill=$OPTARG
            ;;
        \?)
            usage
            exit 1
            ;;
        *)
            usage
            exit 1
            ;;
    esac
done


if [ ! "$str" ]; then
    usage
    exit 1
fi





seq -f $cc -s '' $width; echo

m=$(($width-8))
line=`seq -f "$fill" -s '' $(($m-2))`'  '

TMPIFS="$IFS"
IFS=$"\n"

y=(${str})

IFS="$TMPIFS"

for j in $y; do
    q=$((${#j}/$m))
    r=$((${#j}%$m))
    if [ $r -gt 0 ]; then
        q=$(($q+1))
    fi

    for i in `seq $q`; do
        x=${j:$(($(($i-1))*$m)):$m}
        printf "$cc$cc  %s  %s$cc$cc\n" "${j:$(($(($i-1))*$m)):$m}" "${line:${#x}}"
    done

done

seq -f $cc -s '' $width; echo




